{
  "name": "minecord",
  "version": "0.0.25",
  "description": "Connects Discord and Minecraft Servers without any mods or plugins.",
  "main": "./lib/index.js",
  "module": "src/index.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "minecord": "./dist/index.js"
  },
  "scripts": {
    "build": "babel src --extensions '.ts' --out-dir dist",
    "start": "nodemon dist/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/node-link/minecord.git"
  },
  "keywords": [
    "Discord",
    "Minecraft"
  ],
  "author": "moriyama@node-link.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/node-link/minecord/issues"
  },
  "homepage": "https://github.com/node-link/minecord#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/chokidar": "^2.1.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "jest": "^25.4.0",
    "prettier": "^2.0.4",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "chokidar": "^3.3.1",
    "commander": "^5.0.0",
    "discord.js": "^12.2.0",
    "iconv-lite": "^0.5.1",
    "nodemon": "^2.0.3",
    "rcon-ts": "^1.2.3"
  },
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "testMatch": [
    "/tests/**/*.test.ts"
  ]
}
